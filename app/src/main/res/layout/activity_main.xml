<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="732dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:text="Товары для дома"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="28dp" />

        <RadioGroup
            android:id="@+id/RadioGroupPhoto"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="117dp"
            tools:layout_editor_absoluteY="79dp">

            <RadioButton
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отвертка аккумуляторная Xiaomi "
                android:textColor="#000000"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дрель Xiaomi 12V Max"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/item3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Чистящий комплект Techpoint"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/item4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кофемолка Circle Joy Electric Coffee Grinder"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/item5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отпариватель ручной Deerma Garment"
                android:textColor="#000000" />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="314dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="347dp"
            tools:srcCompat="@drawable/item1" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="11500 тг"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="28dp"
            android:gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>